勝率　取引回数　トータル損益　

app.post('/trade/search', (req, res) => {
    const tradeToSearch = {
        currencyPair: req.body.currencyPair,
        entryDateFrom: req.body.entryDateFrom,
        entryDateTo: req.body.entryDateTo,
        exitDateFrom: req.body.exitDateFrom,
        exitDateTo: req.body.exitDateTo
    }
    console.log(tradeToSearch);
    const query = {
        $and: [
            { entryDate: {$gte: tradeToSearch.entryDateFrom, $lte: tradeToSearch.entryDateTo} },
            { exitDate: {$gte: tradeToSearch.exitDateFrom, $lte: tradeToSearch.exitDateTo} },
            { currencyPair: "GBP/JPY" } ]
    }
    db.collection('trades').find(query).toArray().then((docs) => {
        console.log(docs);
        // res.render('trade.hbs', {
        //     monthlyResult: docs
        // });
        //res.send(docs);
    }, (err) => {
        console.log('unable to fetch trades', err);
    });
})


$('td:nth-child(10),th:nth-child(10)').hide();
$('#detail-inserted-time').hide();
$('#input-area').hide();

$('#show-input-area').click(function() {
    $('#input-area').toggle();
})

$('#search-trade').click(function() {
    const tradeToSearch = {
        currencyPair: $('#search-currency-pair').val(),
        entryDateFrom: $('#search-entry-date-from').val(),
        entryDateTo: $('#search-entry-date-to').val(),
        exitDateFrom: $('#search-exit-date-from').val(),
        exitDateTo: $('#search-exit-date-to').val()
    };
    $.ajax({
         type: "POST",
         url: "/trade/search",
         contentType: 'application/json',
         data: JSON.stringify(tradeToSearch)
    }).done((result) => {
        console.log(result);
        alert("successfully searched")
    }).fail((reject) => {
        alert('Cannot search, please contact developer');
    });
});
